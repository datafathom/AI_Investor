# ==============================================================================
# AI INVESTOR ENVIRONMENT TEMPLATE
# ==============================================================================

# System
COMPOSE_PROJECT_NAME=ai_investor
VITE_BACKEND_PORT=5050
FLASK_DEBUG=1
SECRET_KEY=SECURE_RANDOM_KEY

# Infrastructure (LAN Distribution)
# Set LAN_BOX_IP to offload containers to another machine (e.g., 192.168.1.50)
# SECURITY: Do not use `0.0.0.0 for DOCKER_BIND_IP on the host machine.
# Instead, bind to the specific Static LAN IP of that machine (e.g. 192.168.1.50)
LAN_BOX_IP=127.0.0.1
# DOCKER_BIND_IP should match the LAN Box's IP for external access, or 127.0.0.1 for local only.
DOCKER_BIND_IP=127.0.0.1

# Granular Service Hosts
POSTGRES_HOST=${LAN_BOX_IP:-127.0.0.1}
NEO4J_HOST=${LAN_BOX_IP:-localhost}
REDIS_HOST=${LAN_BOX_IP:-127.0.0.1}
KAFKA_HOST=${LAN_BOX_IP:-127.0.0.1}

# Database Credentials
# IMPORTANT: Use strong passwords for all production and network-exposed services.
POSTGRES_USER=investor_user
POSTGRES_PASSWORD=SECURE_PASSWORD
POSTGRES_DB=investor_db
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:5432/${POSTGRES_DB}?sslmode=disable

NEO4J_URI=bolt+s://${NEO4J_HOST}:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=SECURE_PASSWORD

REDIS_PASSWORD=SECURE_PASSWORD
REDIS_PORT=6379

# Message Bus (Kafka)
KAFKA_BOOTSTRAP_SERVERS=${KAFKA_HOST}:9092

# External APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FRED_API_KEY=your_fred_api_key
FINNHUB_API_KEY=your_finnhub_api_key
POLYGON_API_KEY=your_polygon_api_key
QUANDL_API_KEY=your_quandl_api_key
NEWS_API_KEY=your_news_api_key
CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key

# Third-Party Integrations
ROBINHOOD_USERNAME=
ROBINHOOD_PASSWORD=
ROBINHOOD_TOTP=

REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=ai_investor_v1

# Security & Features
MFA_ENABLED=1
YUBIKEY_MOCK=1
ENCRYPTION_KEY_VAULT= # Placeholder for HashiCorp Vault address
