# AI Investor - Environment Configuration

# -----------------
# 1. Infrastructure
# -----------------

LOG_LEVEL=INFO
DEBUG=true

# Postgres
POSTGRES_USER=investor_user
POSTGRES_PASSWORD=investor_password
POSTGRES_DB=investor_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://investor_user:investor_password@localhost:5432/investor_db

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=investor_password

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# -----------------
# 2. External APIs
# -----------------
# Alpha Vantage (Free Tier) - Market/Earnings Data
ALPHA_VANTAGE_API_KEY=your_key_here

# FRED (Federal Reserve) - Macro/CPI Data
FRED_API_KEY=your_key_here

# The Giving Block - Philanthropy Routing
GIVINGBLOCK_API_KEY=mock_key_123

# Charity Navigator - Impact Verification
CHARITYNAV_APP_ID=your_app_id
CHARITYNAV_APP_KEY=your_app_key

# Reddit Integration (Phase 8 Sentiment)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=ai_investor_v1

# -----------------
# 3. Autonomous Safety
# -----------------
# Kill Switch: Set to 'TRUE' to immediately halt all agent positions
STOP_ALL_TRADING=FALSE
# Max Drawdown % allowed before "Bunker Mode"
MAX_DRAWDOWN_PERCENT=0.02
