# AI Investor - Environment Configuration

# -----------------
# 1. Infrastructure
# -----------------
FLASK_ENV=development
LOG_LEVEL=INFO

# Postgres
POSTGRES_USER=investor_user
POSTGRES_PASSWORD=investor_password
POSTGRES_DB=investor_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Neo4j
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=investor_password

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_TOPIC_VIX=market.vix
KAFKA_TOPIC_EQUITY=market.equity

# -----------------
# 2. External APIs
# -----------------
# Alpha Vantage (Free Tier)
ALPHA_VANTAGE_KEY=your_key_here
# Polygon.io (Optional)
POLYGON_API_KEY=your_key_here

# -----------------
# 3. Autonomous Safety
# -----------------
# Kill Switch: Set to 'TRUE' to immediately halt all agent positions
STOP_ALL_TRADING=FALSE
# Max Drawdown % allow before "Bunker Mode"
MAX_DRAWDOWN_PERCENT=0.02
